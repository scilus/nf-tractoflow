    fodf_local_fit_tracking_mask_type               = "wm"
    fodf_local_fit_tracking_mask_fa_threshold       = 0.1
    fodf_local_fit_sf_threshold                     = 0.1
    fodf_local_fit_sf_initial_threshold             = 0.5       //FIXME
